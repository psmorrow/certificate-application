<Window x:Class="CertificateApplication.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Get certificate from device" MinHeight="400" Height="400" MinWidth="600" Width="600" MaxWidth="600" ResizeMode="CanResizeWithGrip" Icon="/CertificateApplication;component/Images/computer.ico">
    <Grid>
        <Label Name="hostNameLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="110" Margin="10,8,0,0" Padding="0,5">Name or IP Address:</Label>
        <TextBox Name="hostTextBox" VerticalAlignment="Top" Height="23" Margin="130,10,91,0" AcceptsReturn="False" KeyUp="HostTextBox_KeyUp" />
        <Button Name="getButton" HorizontalAlignment="Right" VerticalAlignment="Top" Height="23" Width="75" Margin="0,10,10,0" Click="GetButton_Click">Get</Button>

        <Separator VerticalAlignment="Top" Height="5" Margin="0,43,0,0" />

        <TextBox Name="resultsTextBox" Background="LightGray" Margin="10,58,10,10" IsTabStop="False" IsReadOnly="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" />
    </Grid>
</Window>
